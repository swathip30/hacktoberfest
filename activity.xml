<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/bg">

    <RelativeLayout
        android:layout_width="350dp"
        android:layout_height="460dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.482">

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:inputType="textPersonName"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="10dp"
            android:ems="10"
            android:textSize="20sp"
            android:id="@+id/text1"></EditText>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/text1"
            android:layout_marginTop="30dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:text="1"
            android:textSize="20sp"
            android:id="@+id/btn1"></Button>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/text1"
            android:layout_toRightOf="@id/btn1"
            android:layout_alignBaseline="@id/btn1"
            android:textSize="20sp"
            android:text="2"
            android:layout_marginLeft="3dp"
            android:id="@+id/btn2"
            ></Button>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/text1"
            android:text="3"
            android:layout_toRightOf="@id/btn2"
            android:layout_alignBaseline="@id/btn1"
            android:textSize="20sp"
            android:layout_marginLeft="3dp"
            android:id="@+id/btn3"></Button>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/btn1"
            android:layout_alignStart="@id/btn1"
            android:layout_alignLeft="@id/btn1"
            android:text="4"
            android:textSize="20sp"
            android:id="@+id/btn4"></Button>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/btn2"
            android:layout_toRightOf="@id/btn4"
            android:text="5"
            android:textSize="20sp"
            android:layout_marginLeft="3dp"
            android:id="@+id/btn5"></Button>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/btn3"
            android:layout_toRightOf="@id/btn5"
            android:text="6"
            android:textSize="20sp"
            android:layout_marginLeft="3dp"
            android:id="@+id/btn6"></Button>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/btn4"
            android:layout_alignStart="@id/btn4"
            android:layout_alignLeft="@id/btn4"
            android:text="7"
            android:textSize="20sp"

            android:id="@+id/btn7"></Button>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/btn5"
            android:layout_toRightOf="@id/btn4"
            android:text="8"
            android:textSize="20sp"
            android:layout_marginLeft="3dp"
            android:id="@+id/btn8"></Button>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/btn6"
            android:layout_toRightOf="@id/btn5"
            android:text="9"
            android:textSize="20sp"
            android:layout_marginLeft="3dp"
            android:id="@+id/btn9"></Button>
        <Button
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/btn7"
            android:layout_alignStart="@id/btn7"
            android:layout_alignLeft="@id/btn7"
            android:text="."
            android:id="@+id/btndec">
        </Button>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/btn9"
            android:layout_toRightOf="@id/btndec"
            android:layout_marginLeft="3dp"
            android:text="0"
            android:textSize="20sp"
            android:id="@+id/btn0"></Button>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/text1"
            android:layout_toRightOf="@id/btn3"
            android:layout_alignBaseline="@id/btn3"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="3dp"
            android:text="+"
            android:textSize="20sp"
            android:backgroundTint="#C1790E"
            android:id="@+id/btnadd"></Button>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/btnadd"
            android:layout_toRightOf="@id/btn6"
            android:layout_alignBaseline="@id/btn6"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="3dp"
            android:text="-"
            android:textSize="20sp"
            android:backgroundTint="#C1790E"
            android:id="@+id/btnsub"></Button>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/btnsub"
            android:layout_toRightOf="@id/btn9"
            android:layout_alignBaseline="@id/btn9"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="3dp"
            android:text="*"
            android:textSize="20sp"
            android:backgroundTint="#C1790E"
            android:id="@+id/btnmul"></Button>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/btnmul"
            android:layout_toRightOf="@id/btn0"
            android:layout_alignBaseline="@id/btn0"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="3dp"
            android:text="/"
            android:textSize="20sp"
            android:backgroundTint="#C1790E"
            android:id="@+id/btndiv"></Button>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/btn0"
            android:layout_toRightOf="@id/btndec"
            android:text="="
            android:textSize="20sp"
            android:layout_marginLeft="3dp"
            android:backgroundTint="#F44336"
            android:id="@+id/btneq"></Button>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/btndiv"
            android:layout_toRightOf="@id/btneq"
            android:text="C"
            android:textSize="20sp"
            android:layout_marginLeft="3dp"
            android:backgroundTint="#F44336"
            android:id="@+id/btnclr"></Button>









    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
